{
  "name": "@ecommerce/design-system",
  "private": true,
  "version": "1.0.0",
  "description": "Components library",
  "main": "src/index.tsx",
  "files": [
    "src/**/*"
  ],
  "directories": {
    "src": "src"
  },
  "scripts": {
    "bootstrap": "yarn install --frozen-lockfile",
    "postinstall": "node src/scripts/install-theme.js",
    "build": "rollup -c",
    "icon:types": "node ./src/scripts/icons-types.js",
    "posticon:types": "prettier --write ./src/types",
    "fix:lint": "eslint --fix ./src --ext .ts,.tsx",
    "check:lint": "eslint ./src --ext .ts,.tsx",
    "prettify": "prettier --write ./src",
    "generate:theme-tokens": "node src/scripts/theme-tokens.js",
    "generate:theme-tokens-local": "chakra-cli tokens ./src/theme/index.ts",
    "test": "jest",
    "test:ci": "NODE_ENV=test jest --coverage --ci",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "posttest:coverage": "yarn open:coverage",
    "open:coverage": "node src/scripts/open-coverage.js",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
